<body>
    <h1>🚀 أرسل لايكاتك الآن</h1>

    <!-- زرين اختيار السيرفر -->
    <div>
        <button class="region-button active" id="ME" onclick="selectRegion('ME')">ME</button>
        <button class="region-button" id="IND" onclick="selectRegion('IND')">IND</button>
    </div>

    <!-- مربع إدخال الـ ID -->
    <input type="text" id="uid" placeholder="أدخل ID اللاعب">

    <!-- زر الإرسال -->
    <button onclick="sendLike()">إرسال 💙</button>

    <div id="result"></div>

    <script>
        let selectedRegion = 'ME'; // افتراضي

        function selectRegion(region) {
            selectedRegion = region;
            // تغيير اللون للزر النشط
            document.getElementById('ME').classList.remove('active');
            document.getElementById('IND').classList.remove('active');
            document.getElementById(region).classList.add('active');
        }

        async function sendLike() {
            const uid = document.getElementById("uid").value.trim();
            const resultDiv = document.getElementById("result");
            resultDiv.innerText = "⏳ جاري الإرسال...";
            const res = await fetch("/api/add_likes", {
                method: "POST",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify({id: uid, region: selectedRegion})
            });
            const data = await res.json();
            if (data.success) {
                resultDiv.innerText = `✅ تم إرسال ${data.data.likes_added || 0} لايك إلى ${data.data.player_name || uid} على سيرفر ${selectedRegion}`;
            } else {
                resultDiv.innerText = `❌ ${data.message}`;
            }
        }
    </script>
</body>
