        }
        button {
            background-color: #007bff;
            border: none;
            color: white;
            padding: 10px 25px;
            margin-top: 15px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
        }
        button:hover {
            background-color: #0056b3;
        }
        .region-button {
            background-color: #007bff;
            margin: 5px;
            padding: 8px 20px;
            font-weight: bold;
            border-radius: 5px;
            cursor: pointer;
            border: none;
        }
        .region-button.active {
            background-color: #004080;
        }
